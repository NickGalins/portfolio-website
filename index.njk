<div class="projects-grid">
  {% for section in navigation.section %}
    {% if section.item.length %}
      {% for item in section.item %}
      {% set project = projects | findProject(item['@_id']) %}
      {% set cardHref = item['@_anchor'] if item['@_anchor'] else '/projects/' + item['@_id'] + '/' %}
      <a href="{{ cardHref }}" class="project-card project-card--square" data-tags="{{ project.meta.tags.tag | join(',') if project and project.meta and project.meta.tags and project.meta.tags.tag else '' }}">
        <div class="project-card__image">
          {% if cardImages[item['@_id']] %}
          <img src="/assets/images/{{ cardImages[item['@_id']] }}" alt="{{ item['@_label'] }}">
          {% else %}
          <div class="project-card__placeholder"></div>
          {% endif %}
        </div>
        <div class="project-card__content">
          <h4 class="project-card__title">{{ item['@_label'] }}</h4>
        </div>
      </a>
      {% endfor %}
    {% else %}
      {# Handle single item case #}
      {% set item = section.item %}
      {% set project = projects | findProject(item['@_id']) %}
      {% set cardHref = item['@_anchor'] if item['@_anchor'] else '/projects/' + item['@_id'] + '/' %}
      <a href="{{ cardHref }}" class="project-card project-card--square" data-tags="{{ project.meta.tags.tag | join(',') if project and project.meta and project.meta.tags and project.meta.tags.tag else '' }}">
        <div class="project-card__image">
          {% if cardImages[item['@_id']] %}
          <img src="/assets/images/{{ cardImages[item['@_id']] }}" alt="{{ item['@_label'] }}">
          {% else %}
          <div class="project-card__placeholder"></div>
          {% endif %}
        </div>
        <div class="project-card__content">
          <h4 class="project-card__title">{{ item['@_label'] }}</h4>
        </div>
      </a>
    {% endif %}
  {% endfor %}
</div>
<div class="projects-grid__no-results" id="no-results">
  No results. Select a different combination of tags to view projects.
</div>
