{# ============================================================================
   WORK HISTORY PAGE TEMPLATE
   ============================================================================
   This template displays work history from content/pages/resume.xml
   ============================================================================ #}

<article class="page page--resume">
  {# LOAD RESUME DATA: Get resume data from global pages object #}
  {% set resume = pages.resume %}

  {# HEADER: Page title and intro text #}
  <header class="resume__header">
    <h1>Work History</h1>
    {% if resume.intro %}
    <p class="resume__intro">{{ resume.intro }}</p>
    {% endif %}
  </header>

  {# EXPERIENCE SECTION: List all positions in compact format #}
  <section class="resume__section">
    <h2>Experience</h2>

    {# Loop through each position - compact display with no descriptions #}
    {% for position in resume.positions.position %}
    <div class="resume__position resume__position--compact">
      <div class="resume__position-content">
        <strong class="resume__company">{{ position.company }}</strong>
        <span class="resume__position-separator"> - </span>
        <span class="resume__position-title">{{ position.title }}</span>
        {% if position.years %}
        <span class="resume__position-separator"> - </span>
        <span class="resume__years">{{ position.years }}</span>
        {% endif %}
      </div>
    </div>
    {% endfor %}
  </section>

  {# EDUCATION SECTION #}
  {% if resume.education %}
  <section class="resume__section">
    <h2>Education</h2>

    {# Loop through each degree - handle both single degree and array #}
    {% if resume.education.degree.length %}
      {% for degree in resume.education.degree %}
      <div class="resume__education">
        <strong>{{ degree.institution }}</strong> - {{ degree.name }}
      </div>
      {% endfor %}
    {% else %}
      <div class="resume__education">
        <strong>{{ resume.education.degree.institution }}</strong> - {{ resume.education.degree.name }}
      </div>
    {% endif %}
  </section>
  {% endif %}

  {# BRANDS SECTION: Marquee + link to Content History #}
  {% if resume.brands %}
  <section class="resume__section">
    <h2>Other Experience</h2>
    <p class="resume__brands-description">{{ resume.brands.description.__cdata | safe }}</p>

    {% set marqueeImages = [
      'brands-sg-card.jpg',
      'talent-sodapoppin-card.jpg',
      'shows-hatewatchers-card.jpg',
      'brands-elgato-card.jpg',
      'talent-alinity-card.jpg',
      'copywriting-aws-card.jpg',
      'brands-diceenvy-card.jpg',
      'talent-dkane-card.jpg',
      'shows-christmas-card.jpg',
      'brands-suspects-card.jpg',
      'talent-roflgator-card.jpg',
      'copywriting-g-card.jpg',
      'brands-hellofresh-card.jpg',
      'talent-simply-card.jpg',
      'brands-channelf-card.jpg',
      'pubs-embers-card.jpg',
      'talent-lukeafk-card.jpg',
      'brands-austinshow-card.jpg'
    ] %}

    <div class="logo-marquee logo-marquee--inline">
      <div class="logo-marquee__track">
        <div class="logo-marquee__content">
          {% for image in marqueeImages %}
          <img src="/assets/images/content-history/{{ image }}" alt="" class="logo-marquee__image">
          {% endfor %}
        </div>
        <div class="logo-marquee__content" aria-hidden="true">
          {% for image in marqueeImages %}
          <img src="/assets/images/content-history/{{ image }}" alt="" class="logo-marquee__image">
          {% endfor %}
        </div>
      </div>
    </div>

    <p class="resume__brands-cta"><a href="/content-history/">View full content history â†’</a></p>
  </section>
  {% endif %}
</article>
