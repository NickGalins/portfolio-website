<section class="home-intro">
  <h2>Welcome</h2>
  <p>I'm a multidisciplinary writer and content designer with experience spanning UX writing, technical documentation, narrative design, and creative direction.</p>
  <p>Explore my work using the navigation, or learn more <a href="/about/">about me</a>.</p>
</section>

<section class="featured-work">
  <h2>Featured Work</h2>
  
  <div class="project-grid">
    {% set featured = ['everland-trust-safety', 'aws-ai-agents', 'everland-narrative'] %}
    {% for id in featured %}
      {% set project = projects | findProject(id) %}
      {% if project %}
      <a href="/projects/{{ project.meta.id }}/" class="project-card">
        <div class="project-card__image">
          {% if project.meta.thumbnail %}
          <img src="{{ project.meta.thumbnail }}" alt="{{ project.meta.title }}">
          {% else %}
          <div class="project-card__placeholder"></div>
          {% endif %}
        </div>
        <div class="project-card__content">
          <h3 class="project-card__title">{{ project.meta.title }}</h3>
          <p class="project-card__subtitle">{{ project.meta.subtitle }}</p>
        </div>
      </a>
      {% endif %}
    {% endfor %}
  </div>
</section>
